
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    @* Content *@
    <div class="content">
        <h1>Alen Walker-Fade</h1>
        <p style="color: #c2c9dc;">
            You were the shadow to my light Did you feel us Another start You fade
            <br>
            Away afraid our aim is out of sight Wanna see us Alive
        </p>
        <div class="buttons">
            <button>PLAY</button>
            <button>FOLLOW</button>
        </div>
    </div>


    @* Popular Song *@
    <div class="popular_song">
        <div class="h4">
            <h4>Popular Song</h4>
            <div class="btn_s">
                <i id="left_scroll" class="bi bi-arrow-left-short"></i>
                <i id="right_scroll" class="bi bi-arrow-right-short"></i>
            </div>
        </div>
        <div class="pop_song">
            @{
                ProjectHQTCSDL.Models.ProjectMusicEntities db = new ProjectHQTCSDL.Models.ProjectMusicEntities();
                var getLstSong = ViewBag.getLstSong as List<ProjectHQTCSDL.Models.Music>;
                foreach (var item in getLstSong)
                {
                    var getSinger = db.CaSis.Where(x => x.idCaSi == item.idCaSi).ToList();
                    <li class="songItem">
                        <div class="img_play">
                            <img style="object-fit: cover;" src="~/Images/@item.imgMusic" alt="alan">
                            <a style="position: absolute; top: 45px; left: 35px;" href="@Url.Action("ChangeMusic", "Home", new {idMusic = item.idMusic })">
                                <i class="bi playListPlay bi-play-circle-fill" id="7"></i>
                            </a>
                        </div>
                        <h5>

                            @item.tenBaiHat
                            <br>
                            <div style="color: aqua;" class="subtitle">@getSinger[0].tenCaSi</div>
                        </h5>
                    </li>
                }
            }
            <li class="songItem">
                <div class="img_play">
                    <img src="img/1.jpg" alt="alan">
                    <i class="bi playListPlay bi-play-circle-fill" id="7"></i>
                </div>
                <h5>
                    On My Way
                    <br>
                    <div class="subtitle">Alan Walker</div>
                </h5>
            </li>
        </div>
    </div>

    @* Catergory Song *@
    <div style="width: 90%; height: auto; /* border: 1px solid #fff; */ margin: auto; margin-top: 15px;">
        <div class="header_category">
            <h4>Catagory Song</h4>
        </div>
        <div class="main_category" style="width: 100%; height: 120px; margin-top: 15px; display: flex; overflow-x: auto; scroll-behavior: smooth;">
            @{
                var getcategory = db.Categories.ToList();
                foreach (var item in getcategory)
                {
                    <div class="container" style="height: 100px; width: 100px; display: flex; justify-content:center; align-items:center; border: 1px solid white; margin-right: 20px; border-radius: 10px;">
                        <a href="@Url.Action("OpenCategory", "Home", new {idCategory = item.idCategory })" style="color: #36e2ec; text-decoration:none; ">
                            <strong>@item.nameCategory</strong>
                        </a> 
                    </div>
                }
            }
        </div>
    </div>
    @* Show Artits *@
    <div class="popular_artists">
        <div class="h4">
            <h4>Popular Artists</h4>
            <div class="btn_s">
                <i id="left_scrolls" class="bi bi-arrow-left-short"></i>
                <i id="right_scrolls" class="bi bi-arrow-right-short"></i>
            </div>
        </div>
        <div class="item" style="marrgin-top: 20px; margin-left: 10px;">
            @{
                //ProjectHQTCSDL.Models.ProjectMusicEntities db = new ProjectHQTCSDL.Models.ProjectMusicEntities();
                var getListSinger = db.CaSis.ToList() as List<ProjectHQTCSDL.Models.CaSi>;
                foreach (var item in getListSinger)
                {
                    <li>
                        <a href="@Url.Action("OpenMusicFromSinger", "Home", new {idCaSi = item.idCaSi })">
                            <img style="object-fit:cover;" src="~/Images/@item.imgCaSi" alt="Arjit Singh" title="Arjit Singh">

                        </a>
                    </li>
                }
            }
            <!-- change all img  -->
        </div>
    </div>
</div>